{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "lib": []
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"]
}
